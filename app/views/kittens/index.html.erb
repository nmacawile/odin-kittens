<h1>Kittens</h1>
<%= render "shared/flash" %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Cuteness</th>
      <th>Softness</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @kittens.each do |kitten| %>
      <tr>
        <td><%= kitten.name %></td>
        <td><%= kitten.age %></td>
        <td><%= kitten.cuteness %></td>
        <td><%= kitten.softness %></td>
        <td><%= link_to "Show", kitten %></td>
        <td><%= link_to "Edit", edit_kitten_path(kitten) %></td>
        <td><%= link_to "Delete", kitten, method: :delete, data: { confirm: "Delete this kitten?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Kitten", new_kitten_path %>
